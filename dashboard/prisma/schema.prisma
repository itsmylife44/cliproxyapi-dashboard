// Prisma schema for CLIProxyAPI Dashboard
// PostgreSQL database with User model for authentication

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  modelPreference     ModelPreference?
  agentModelOverrides AgentModelOverride?
  syncTokens          SyncToken[]
  apiKeys             UserApiKey[]

  @@map("users")
}

model ModelPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  excludedModels String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("model_preferences")
}

model AgentModelOverride {
  id        String   @id @default(cuid())
  userId    String   @unique
  overrides Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("agent_model_overrides")
}

model SyncToken {
  id         String    @id @default(cuid())
  userId     String
  name       String    @default("Default")
  tokenHash  String
  syncApiKey String?
  lastUsedAt DateTime?
  revokedAt  DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sync_tokens")
}

model UserApiKey {
  id         String    @id @default(cuid())
  userId     String
  key        String    @unique
  name       String    @default("Default")
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_api_keys")
}
