// Prisma schema for CLIProxyAPI Dashboard
// PostgreSQL database with User model for authentication

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  modelPreference     ModelPreference?
  agentModelOverrides AgentModelOverride?
  syncTokens          SyncToken[]
  apiKeys             UserApiKey[]
  configTemplate      ConfigTemplate?
  configSubscription  ConfigSubscription?
  providerKeys        ProviderKeyOwnership[]
  providerOAuth       ProviderOAuthOwnership[]

  @@map("users")
}

model ModelPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  excludedModels String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("model_preferences")
}

model AgentModelOverride {
  id        String   @id @default(cuid())
  userId    String   @unique
  overrides Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("agent_model_overrides")
}

model SyncToken {
  id         String    @id @default(cuid())
  userId     String
  name       String    @default("Default")
  tokenHash  String
  syncApiKey String?
  lastUsedAt DateTime?
  revokedAt  DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sync_tokens")
}

model UserApiKey {
  id         String    @id @default(cuid())
  userId     String
  key        String    @unique
  name       String    @default("Default")
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_api_keys")
}

model ConfigTemplate {
  id        String   @id @default(cuid())
  userId    String   @unique
  shareCode String   @unique
  name      String   @default("My Config")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptions ConfigSubscription[]

  @@index([shareCode])
  @@map("config_templates")
}

model ConfigSubscription {
  id             String    @id @default(cuid())
  userId         String    @unique
  templateId     String
  isActive       Boolean   @default(true)
  frozenConfig   Json?
  previousConfig Json?
  subscribedAt   DateTime  @default(now())
  lastSyncedAt   DateTime?

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  template ConfigTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
  @@map("config_subscriptions")
}

model ProviderKeyOwnership {
  id            String   @id @default(cuid())
  userId        String
  provider      String
  keyIdentifier String
  keyHash       String   @unique
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([provider])
  @@map("provider_key_ownerships")
}

model ProviderOAuthOwnership {
  id           String    @id @default(cuid())
  userId       String
  provider     String
  accountName  String    @unique
  accountEmail String?
  createdAt    DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("provider_oauth_ownerships")
}

model SystemSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@map("system_settings")
}
